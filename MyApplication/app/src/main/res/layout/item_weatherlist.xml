<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/weatherlist_item_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_weight="3"
        android:text="default text contents"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/weatherlist_item_icon_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/weatherlist_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/weather_snow_icon"
            android:padding="2dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/weatherlist_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_weight="2"
        android:text="default time"
        android:textSize="16sp" />

    <Button
        android:id="@+id/weatherlist_item_delete"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="#808080"
        android:text="삭제" />
</LinearLayout>
