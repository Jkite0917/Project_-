<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/item_border_shape">

    <TextView
        android:id="@+id/WeatherItemTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_weight="3"
        android:text="default text contents"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/WeatherItemIconFrameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/WeatherItemIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/weather_snow_icon"
            android:padding="2dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/WeatherItemTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_weight="2"
        android:text="default time"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/WeatherItemDeleteButton"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/delete_border_shape"
        android:text="삭제" />
</LinearLayout>
