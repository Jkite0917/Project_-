<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 월, 슬라이드-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/imageButton_calender_monthLeft"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:contentDescription="Previous Month"
            android:src="@drawable/arrow_left_icon"
            android:scaleType="centerInside"
            android:background="#00FFFFFF"/>

        <TextView
            android:id="@+id/textview_calender_yearMonth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="2024년 11월"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/imageButton_calender_monthRight"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:contentDescription="Previous Month"
            android:src="@drawable/arrow_right_icon"
            android:scaleType="centerInside"
            android:background="#00FFFFFF"/>


    </LinearLayout>

    <!-- 요일 -->
    <LinearLayout
        android:id="@+id/linearLayout_calender_daysText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="일"
            android:textSize="20dp"
            android:textColor="#BE2E22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="월"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="화"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="수"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="목"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="금"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="토"
            android:textSize="20dp"
            android:textColor="@color/teal_700" />

    </LinearLayout>

    <!-- 날짜 표시 영역 -->
    <GridLayout
        android:id="@+id/gridLayout_calender_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="6"
        android:layout_marginTop="8dp">

        <!-- 날짜 텍스트 뷰들이 동적으로 추가될 예정 -->
    </GridLayout>

</LinearLayout>
