                android:id="@+id/textview_mainScrollItem_temperature1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="20°C"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageview_mainScrollItem_weatherIcon1" />

            <!-- 강수 확률과 이미지 -->
            <LinearLayout
                android:id="@+id/linearLayout_mainScrollItem_rainInfoLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/textview_mainScrollItem_temperature1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imageview_mainScrollItem_rainIcon1"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:src="@drawable/rain" />

                <TextView
                    android:id="@+id/textview_mainScrollItem_rainText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="15%"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </LinearLayout>

