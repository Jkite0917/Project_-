            android:layout_height="match_parent"
            android:id="@+id/constraintLayout_mainScrollItem_layout1">

            <!-- 시간 표시 -->
            <TextView
                android:id="@+id/textview_mainScrollItem_time1"
                android:layout_width="126dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:text="00:00"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 날씨 아이콘 -->
            <ImageView
                android:id="@+id/imageview_mainScrollItem_weatherIcon1"
                android:layout_width="74dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/menu_weather_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_mainScrollItem_time1" />

            <!-- 온도 표시 -->
