<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- 날씨 선택 텍스트 -->
    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날씨 선택"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 날씨 선택 버튼들 (GridLayout) -->
    <GridLayout
        android:id="@+id/gridWeather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvWeather"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 날씨 아이콘 버튼들 -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="#20b2aa"
            android:src="@drawable/weather_sun_icon"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="#20b2aa"
            android:src="@drawable/weather_cloud_icon"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="#20b2aa"
            android:src="@drawable/weather_rain_icon"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="#20b2aa"
            android:src="@drawable/weather_thunder_icon"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="#20b2aa"
            android:src="@drawable/weather_snow_icon"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="#20b2aa"
            android:src="@drawable/weather_suncloud_icon"
            android:scaleType="fitCenter"
            android:padding="8dp" />
    </GridLayout>

    <!-- 시간 선택 텍스트 -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 선택"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/gridWeather"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 시간 선택 버튼들 (수평 LinearLayout) -->
    <LinearLayout
        android:id="@+id/linearTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#20b2aa"
            android:text="오기전날" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#20b2aa"
            android:text="오늘순간" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#20b2aa"
            android:text="하루종일" />
    </LinearLayout>

    <!-- 내용 입력 텍스트 -->
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/linearTime"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 내용 입력 (EditText) -->
    <EditText
        android:id="@+id/etContent"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="top|start"
        android:hint="내용을 입력해주세요"
        android:minHeight="100dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="#20b2aa"
        android:text="저장"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etContent" />

</androidx.constraintlayout.widget.ConstraintLayout>
